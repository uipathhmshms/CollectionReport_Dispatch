    <ui:InvokeCode ContinueOnError="{x:Null}" sap2010:Annotation.AnnotationText="בשורות בהם יש מנהל משני לפרויקט - ניצור שכפול של שורות אלה עם השם של המנהל המשני כדי שאותו מקרה יופיע בדוח של שני המנהלים (הראשי והמשני)" Code="' Create a local copy of the DataTable to work with&#xA;Dim localDt As DataTable = io_dt_data.Clone()&#xA;localDt.Clear() ' Removes all rows from the DataTable while preserving the table's structure&#xA;For Each row As DataRow In io_dt_data.Rows&#xA;    localDt.ImportRow(row)&#xA;Next&#xA;&#xA;' Create a list to hold the modified rows&#xA;Dim newRows As New List(Of DataRow)&#xA;&#xA;' Use LINQ to transform the rows&#xA;newRows = localDt.AsEnumerable() _&#xA;    .SelectMany(Function(row)&#xA;                    ' Add the original row to the collection&#xA;                    Dim result As New List(Of DataRow) From {row}&#xA;                    &#xA;                    ' Check if &quot;מנהל פרויקט שני&quot; has a value&#xA;                    If Not String.IsNullOrEmpty(DirectCast(row(&quot;קוד מנהל פרויקט שני&quot;), Object).ToString()) Then&#xA;                        ' Create a new row with the same data but update the &quot;שם מנהל פרויקט&quot;&#xA;                        Dim newRow As DataRow = localDt.NewRow()&#xA;                        newRow.ItemArray = DirectCast(row.ItemArray.Clone(), Object())&#xA;                        newRow(&quot;שם מנהל פרויקט&quot;) = row(&quot;שם מנהל פרויקט שני&quot;)&#xA;                        newRow(&quot;קוד מנהל פרויקט&quot;) = row(&quot;קוד מנהל פרויקט שני&quot;)&#xA;                        ' Add the new row to the collection&#xA;                        result.Add(newRow)&#xA;                    End If&#xA;                    &#xA;                    Return result&#xA;                End Function) _&#xA;    .ToList()&#xA;&#xA;' Clear the original DataTable and add all rows back&#xA;io_dt_data.Clear()&#xA;For Each newRow As DataRow In newRows&#xA;    io_dt_data.ImportRow(newRow)&#xA;Next" DisplayName="Invo